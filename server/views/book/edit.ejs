
    <%-include ('../partials/header.ejs');%>
    <%-include ('../partials/main_nav.ejs');%>

    <body style="background-image: url('pink.jpg');">
<!--content for the EDIT page-->
<div class = "container">
    <div class = "row">
        <div class ="offset-md-3 col-md-3">
        <h1><%= title %></h1>
        <form class = "form" method="POST">
            <div class ="form group">
                <label for="nameTextField">Name</label>
                <input type="text" class="form control"
                id="nameTextField"
                placeholder="Enter name"
                name="name"
                value="<%=book.name%>"
                required>
            </div>

            <div class ="form group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form control"
                id="emailTextField"
                placeholder="Enter email address"
                name="email" 
                value="<%=book.email%>"
                required>
            </div>

            <div class ="form group">
                <label for="contactTextField">Contact number</label>
                <input type="number" class="form control"
                id="contactTextField"
                placeholder="Enter contact number"
                name="contact" 
                value="<%=book.contact%>"
                required>
            </div>



            <button class = "btn btn-primary" type="submit"><i class ="fas fa-edit"></i>submit</button>
            <a href='/bookList' class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>  
        
        </form>
        </div>
        </div>
    </div>
</body>

